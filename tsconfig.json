{
  "compilerOptions": {
    "outDir": "./public/dist/",
    "sourceMap": true,
    "module": "esnext",
    "target": "es2015",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es2018", "dom"]
  },
  "include": ["./src/**/*"]
}
